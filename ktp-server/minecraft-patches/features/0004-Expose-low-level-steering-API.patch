diff --git a/net/minecraft/world/entity/Entity.java b/net/minecraft/world/entity/Entity.java
index ad4322950726f86e250927f097a4214ed25ddce0..2e3e901fe4d8a3bb12a8d0ec8c4fdc5e96a5116e 100644
